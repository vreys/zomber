<div class="row">
  <%= form_for(@user, :url => invitation_path('user'), :html => {:method => :put, :class => 'large'}) do |f| %>
    <div class="inner">
      <h1>Регистрация по приглашению</h1>

      <%= f.hidden_field :invitation_token %>

      <div class="field_wrap"><%= f.label :login, 'Логин' %>
        <%= f.text_field :login %></div>

      <div class="field_wrap"><%= f.label :email, 'Email' %>
        <%= f.text_field :email %></div>

      <div class="field_wrap"><%= f.label :password, 'Пароль' %>
        <%= f.password_field :password %></div>

     <%= f.submit "Зарегистрироваться" %>
    </div>
  <% end %>
</div>


















