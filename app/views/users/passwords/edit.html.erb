<%= form_for(@user, :as => 'user', :url => user_password_path, :html => { :method => :put, :class => 'large' }) do |f| %>
  <div class="inner">
    <h1>Восстановление пароля</h1>
    <%= f.hidden_field :reset_password_token %>

    <div class="field_wrap"><%= f.label :password, "ваш новый пароль" %>
      <%= f.password_field :password %></div>

    <p><%= f.submit "Сохранить" %></p>
  </div>
<% end %>
