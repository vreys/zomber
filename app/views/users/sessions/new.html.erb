<div class="row">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'large'}) do |f| %>
    <div class="inner">
      <h1>Анонимус детектед</h1>

      <div class="field_wrap"><%= f.label :email %>
        <%= f.text_field :email, :autocomplete => 'off' %></div>

      <div class="field_wrap"><%= f.label :password, 'Пароль' %>
        <%= f.password_field :password %></div>

      <div class="field_wrap">
        <%= f.submit "Войти" %>

        <%= f.check_box :remember_me %> <%= f.label :remember_me, 'Запомнить меня' %>
      </div>
    </div>
  <% end %>
</div>
