<div class="row">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'large'}) do |f| %>
    <div class="inner">
      <h1>Вход</h1>

      <p><%= f.label :email %><br />
        <%= f.text_field :email, :autocomplete => 'off' %></p>

      <p><%= f.label :password, 'Пароль' %><br />
        <%= f.password_field :password %></p>

      <p class="controls">
        <%= f.submit "Войти" %>

        <%= f.check_box :remember_me %> <%= f.label :remember_me, 'Запомнить меня' %>
      </p>
    </div>
  <% end %>
</div>
