<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8"/>
    <title>Zomber.tv</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <!-- The 1140px Grid -->
    <link rel="stylesheet" href="/stylesheets/1140.css" type="text/css" media="screen" />
    
    <!-- Type and image presets - NOT ESSENTIAL -->
    <link rel="stylesheet" href="/stylesheets/typeimg.css" type="text/css" media="screen" />
    <!-- Make minor type adjustments for 1024 monitors -->
    <link rel="stylesheet" href="/stylesheets/smallerscreen.css" media="only screen and (max-width: 1023px)" />
    <!-- Resets grid for mobile -->
    <link rel="stylesheet" href="/stylesheets/mobile.css" media="handheld, only screen and (max-width: 767px)" />
    <!-- Put your layout here -->
    <link rel="stylesheet" href="/stylesheets/layout.css" type="text/css" media="screen" />

    <%= stylesheet_link_tag 'serial' %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <div class="container">
      <div id="header" class="row">
        <div class="sixcol">
          <%= render_logo %>
        </div>

        <div class="sixcol last">
          <%= render_userbar %>

          <div id="menu">
            <%= yield :menu %>
          </div>
        </div>
      </div>

      <%= render_messages %>

      <%= yield %>

      <%= render_footer %>
    </div>  
    <!-- Yandex.Metrika counter -->
    <div style="display:none;"><script type="text/javascript">
        (function(w, c) {
        (w[c] = w[c] || []).push(function() {
        try {
            w.yaCounter2327830 = new Ya.Metrika(2327830);
             yaCounter2327830.clickmap(true);
             yaCounter2327830.trackLinks(true);
        
        } catch(e) {}
        });
        })(window, 'yandex_metrika_callbacks');
    </script></div>
    <script src="//mc.yandex.ru/metrika/watch.js" type="text/javascript" defer="defer"></script>
    <noscript><div style="position:absolute"><img src="//mc.yandex.ru/watch/2327830" alt="" /></div></noscript>
    <!-- /Yandex.Metrika counter -->
  </body>
</html>
